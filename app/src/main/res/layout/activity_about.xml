<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biruBG"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/gambar_app"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/text_app"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_baseline_calculate_24"/>

    <TextView
        android:id="@+id/text_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:text="Hitung Bangun Datar dan Bangun Ruang"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_app"
        android:gravity="center_horizontal"
        android:text="Version 1.0.0"
        android:textColor="@color/white"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/text_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_version"
        android:gravity="center_horizontal"
        android:text="Kontak Kami"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_contact"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:text="nissa.2904az@gmail.com / trisena@gmail.com"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:onClick="contactMe"/>
</RelativeLayout>